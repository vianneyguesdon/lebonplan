
<div class="container">
  <div class="row justify-content-center">
    <div class="col-lg-4 col-md-6 col-sm-12">
      <h3 class="mt-4">Cr√©ez un compte en quelques instants !</h3>
      {{#if errors}}
      <div class="alert alert-danger" role="alert">
        {{errors}}
      </div>
      {{/if}}
      <form action="/signup" method="POST">
        <div class="input-group my-1">
          <div class="input-group-prepend">
            <span class="input-group-text" id="basic-addon1"><i class="fas fa-user"></i></span>
          </div>
          <input type="text" placeholder="Email" name="username" class="form-control"/>
        </div>
        <div class="input-group my-1">
          <div class="input-group-prepend">
            <span class="input-group-text" id="basic-addon1"><i class="far fa-id-card"></i></span>
          </div>
          <input type="text" placeholder="Firstname" name="firstName" class="form-control"/>
        </div>
        <div class="input-group my-1">
          <div class="input-group-prepend">
            <span class="input-group-text" id="basic-addon1"><i class="far fa-id-card"></i></span>
          </div>
          <input type="text" placeholder="Surname" name="surName" class="form-control"/>
        </div>
        <div class="input-group my-1">
          <div class="input-group-prepend">
            <span class="input-group-text" id="basic-addon1"><i class="fas fa-birthday-cake"></i></span>
          </div>
          <input type="text" placeholder="Date Of Birth" name="dateOfBirth" class="form-control"/>
        </div>
        <div class="input-group my-1">
          <div class="input-group-prepend">
            <span class="input-group-text" id="basic-addon1"><i class="fas fa-unlock-alt"></i></span>
          </div>
          <input type="password" placeholder="Password" name="password" class="form-control"/>
        </div>
        <div class="input-group my-1">
          <div class="input-group-prepend">
            <span class="input-group-text" id="basic-addon1"><i class="fas fa-unlock-alt"></i></span>
          </div>
          <input type="password" placeholder="Confirm Password" name="passwordconf" class="form-control"/>
        </div>
        <button class="btn btn-primary mb-5" type="submit">Submit</button>
      </form>
    </div>
  </div>
</div>